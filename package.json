{
  "name": "@gfdigital/template-ts-library",
  "private": true,
  "version": "0.0.1",
  "description": "An opinionated template repo for creating typescript libraries",
  "type": "module",
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": "./dist/index.js"
  },
  "scripts": {
    "build": "yarn tsc --project ./tsconfig.build.json",
    "release": "npx changeset publish",
    "test": "yarn vitest --run",
    "lint": "eslint src --fix"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/green-flash-digital/template-ts-library.git"
  },
  "keywords": [
    "typescript",
    "library",
    "template",
    "green-flash-digital",
    "opinionated",
    "npm",
    "package",
    "yarn",
    "module",
    "esm",
    "typescript-library",
    "boilerplate",
    "starter",
    "repo-template",
    "build-tooling",
    "monorepo-friendly",
    "eslint",
    "vitest",
    "tsconfig",
    "changesets"
  ],
  "author": "Drew DeCarme (drew@greenflash.digital)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/green-flash-digital/template-ts-library/issues"
  },
  "homepage": "https://github.com/green-flash-digital/template-ts-library#readme",
  "packageManager": "yarn@4.7.0",
  "devDependencies": {
    "@changesets/cli": "^2.28.1",
    "@gfdigital/eslint-config": "0.4.0",
    "@gfdigital/tsconfig": "^0.3.1",
    "@types/node": "^22.13.10",
    "eslint": "^9.22.0",
    "typescript": "^5.8.2",
    "vitest": "^3.0.9"
  }
}
